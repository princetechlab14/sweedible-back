<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partial/head", { title: "Products Review List" }) %>
</head>

<body class="bg-gray-100 dark:bg-gray-900 font-sans bg-cover bg-center">
    <!-- Sidebar -->
    <%- include("../partial/sidebar") %>
        <!-- Main Content -->
        <div class="ml-0 md:ml-64 flex flex-col min-h-screen">
            <!-- Header -->
            <%- include("../partial/header") %>
                <!-- Main Content Area -->
                <div class="container mx-auto py-8 mt-5">
                    <div class="flex flex-col shadow-md mb-5 bg-white rounded-lg p-3">
                        <h1 class="text-4xl font-extrabold mb-4 text-gray-900 dark:text-white">
                            Products Review List
                        </h1>
                    </div>
                    <div class="container shadow-lg bg-white rounded-lg mx-auto px-4 sm:px-8">
                        <div class="py-8">
                            <div class="overflow-x-auto">
                                <table id="blogTable" class="min-w-full bg-white border border-gray-200 rounded-lg">
                                    <thead style="background-color: #1f2937">
                                        <tr>
                                            <th
                                                class="px-4 py-3 text-left text-xs font-medium text-gray-100 uppercase tracking-wider">
                                                Actions
                                            </th>
                                            <th
                                                class="px-4 py-3 text-left text-xs font-medium text-gray-100 uppercase tracking-wider">
                                                ID
                                            </th>
                                            <th
                                                class="px-4 py-3 text-left text-xs font-medium text-gray-100 uppercase tracking-wider">
                                                Email
                                            </th>
                                            <th
                                                class="px-4 py-3 text-left text-xs font-medium text-gray-100 uppercase tracking-wider">
                                                Rating
                                            </th>
                                            <th
                                                class="px-4 py-3 text-left text-xs font-medium text-gray-100 uppercase tracking-wider">
                                                Note
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="divide-y divide-gray-200">
                                        <% productReviews.forEach((review, index)=> { %>
                                            <tr
                                                class="<%= index % 2 === 0 ? 'bg-gray-50' : 'bg-white' %> hover:bg-gray-100">
                                                <td
                                                    class="px-4 py-4 whitespace-nowrap flex items-center gap-4 text-sm text-gray-900">
                                                    <form action="/admin/products/review-delete/<%= review.id %>"
                                                        method="POST" class="inline delete-form">
                                                        <button type="submit"
                                                            class="text-red-500 hover:text-red-700 icon-button"
                                                            title="Delete">
                                                            <i class="fa fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                                <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-900">
                                                    <%= review.id %>
                                                </td>
                                                <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-900">
                                                    <%= review.email %>
                                                </td>
                                                <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-900">
                                                    <%= review.rating %>
                                                </td>
                                                <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-900">
                                                    <%= review.note %>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        <!-- Footer -->
        <%- include("../partial/footer") %>

            <!-- jQuery -->
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <!-- DataTables JS -->
            <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
            <!-- SweetAlert2 JS -->
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

            <script>
                $(document).ready(function () {
                    // DataTable initialization
                    $("#blogTable").DataTable({
                        pagingType: "full",
                    });

                    // Add a click event listener to delete buttons
                    $(".delete-form").on("submit", function (e) {
                        e.preventDefault();
                        const form = $(this);
                        Swal.fire({
                            title: "Are you sure?",
                            text: "You won't be able to revert this!",
                            icon: "warning",
                            showCancelButton: true,
                            confirmButtonColor: "#3085d6",
                            cancelButtonColor: "#d33",
                            confirmButtonText: "Yes, delete it!",
                            cancelButtonText: "Cancel",
                        }).then((result) => {
                            if (result.isConfirmed) form.off("submit").submit();
                        });
                    });
                });
            </script>
</body>

</html>